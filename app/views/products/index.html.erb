<h1>Listing products</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Discount</th>
    <th>Quantity</th>
    <th>Console</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to(image_tag(product.image_url), product) unless product.image_url.nil? %></td>
    <td><%= link_to product.name, product %></td>
    <td><%= product.price %></td>
    <td><%= product.description %></td>
    <td><%= product.discount %></td>
    <td><%= product.quantity %></td>
    <td><%= product.console.name %></td>
<% end %>
</table>

