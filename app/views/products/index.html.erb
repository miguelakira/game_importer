<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Discount</th>
    <th>Quantity</th>
    <th>Console</th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.description %></td>
    <td><%= product.discount %></td>
    <td><%= product.quantity %></td>
    <td><%= product.console_id %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Add to Cart', add_product_path(product) %></td>
  </tr>
<% end %>
</table>

